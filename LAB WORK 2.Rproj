
# Activity 1: BMI Calculator

weight <- as.numeric(readline(prompt = "Enter weight (kg): "))
height <- as.numeric(readline(prompt = "Enter height (m): "))

bmi <- weight / (height^2)

underweight <- bmi < 18.5
normal <- bmi >= 18.5 & bmi <= 24.9
overweight <- bmi >= 25.0 & bmi <= 39.9
obese <- bmi >= 40.0

cat("\nYour BMI:", round(bmi, 2), "\n")
cat("Underweight:", underweight, "\n")
cat("Normal:", normal, "\n")
cat("Overweight:", overweight, "\n")
cat("Obese:", obese, "\n\n")


# Activity 2: String Comparison (Case-Insensitive)

string1 <- readline(prompt = "Enter string 1: ")
string2 <- readline(prompt = "Enter string 2: ")

string1_lower <- tolower(string1)
string2_lower <- tolower(string2)

are_same <- string1_lower == string2_lower

cat("This program compare 2 strings. Both inputs are similar:", are_same, "\n\n")


# Activity 3: Name and Phone Number Formatting

name <- readline(prompt = "Enter your name: ")
phone <- readline(prompt = "Enter your phone number: ")

name_upper <- toupper(name)

phone_digits <- gsub("[^0-9]", "", phone)

first_3 <- substr(phone_digits, 1, 3)
last_4 <- substr(phone_digits, nchar(phone_digits) - 3, nchar(phone_digits))

num_x <- nchar(phone_digits) - 7

masked_phone <- paste0(first_3, " -", paste(rep("x", num_x), collapse = ""), " ", last_4)

cat("Hi,", name_upper, ". A verification code has been sent to ", masked_phone, "\n")
cat("All activities completed!\n")
cat("========================================\n")
