cat("\n========== ACTIVITY 2: MATRICES ==========\n\n")

# Given vector
V1 = c(2,3,1,5,4,6,8,7,9)

# Create Matrix-1 (3x3 matrix)
Matrix_1 <- matrix(V1, nrow = 3, ncol = 3, byrow = TRUE)
cat("Matrix-1:\n")
print(Matrix_1)
cat("\n")

# Transpose Matrix-1 to create Matrix-2
Matrix_2 <- t(Matrix_1)
cat("Matrix-2 (Transpose of Matrix-1):\n")
print(Matrix_2)
cat("\n")

# Rename rows and columns
rownames(Matrix_1) <- c("Row1", "Row2", "Row3")
colnames(Matrix_1) <- c("Col1", "Col2", "Col3")

rownames(Matrix_2) <- c("Row1", "Row2", "Row3")
colnames(Matrix_2) <- c("Col1", "Col2", "Col3")

cat("Matrix-1 with named rows and columns:\n")
print(Matrix_1)
cat("\n")

cat("Matrix-2 with named rows and columns:\n")
print(Matrix_2)
cat("\n")

# Matrix Operations
cat("Addition (Matrix-1 + Matrix-2):\n")
Matrix_Add <- Matrix_1 + Matrix_2
print(Matrix_Add)
cat("\n")

cat("Subtraction (Matrix-1 - Matrix-2):\n")
Matrix_Sub <- Matrix_1 - Matrix_2
print(Matrix_Sub)
cat("\n")

cat("Element-wise Multiplication (Matrix-1 * Matrix-2):\n")
Matrix_Mult_Elementwise <- Matrix_1 * Matrix_2
print(Matrix_Mult_Elementwise)
cat("\n")

cat("Matrix Multiplication (Matrix-1 %*% Matrix-2):\n")
Matrix_Mult <- Matrix_1 %*% Matrix_2
print(Matrix_Mult)
cat("\n")

cat("Division (Matrix-1 / Matrix-2):\n")
Matrix_Div <- Matrix_1 / Matrix_2
print(Matrix_Div)
cat("\n")


