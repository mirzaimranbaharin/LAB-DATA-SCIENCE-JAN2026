# Activity 1: Factors - Retirement Age Analysis

age = c(55,57,56,52,51,59,58,53,59,55,60,60,60,60,52,55,56,51,60,
        52,54,56,52,57,54,56,58,53,53,50,55,51,57,60,57,55,51,50,57,58)

# Convert to factor
age_factor <- factor(age)

# Display levels
cat("Levels of the age factor:\n")
print(levels(age_factor))
cat("\n")

# Count frequency for each age
cat("Staff Age Distribution:\n")
cat("Staff Age | Total number of staff\n")
cat("----------|----------------------\n")
age_table <- table(age)
for(i in 1:length(age_table)) {
  cat(sprintf("   %2d     |         %d\n", 
              as.numeric(names(age_table)[i]), 
              age_table[i]))
}
cat("\n")

# Divide into 5 ranges (50-52, 52-54, 54-56, 56-58, 58-60)
age_ranges <- cut(age, 
                  breaks = c(49, 52, 54, 56, 58, 60), 
                  labels = c("50-52", "52-54", "54-56", "56-58", "58-60"),
                  include.lowest = TRUE,
                  right = TRUE)

# Count frequency for each range
cat("Age Range Distribution:\n")
cat("Age Range | Total number of staff\n")
cat("----------|----------------------\n")
range_table <- table(age_ranges)
for(i in 1:length(range_table)) {
  cat(sprintf("  %s   |         %d\n", 
              names(range_table)[i], 
              range_table[i]))
}
cat("\n")

# Insights/Conclusion
cat("INSIGHTS AND CONCLUSIONS:\n")
cat("1. Most staff retire at age 60 (", sum(age == 60), " staff)\n", sep="")
cat("2. The 58-60 age range has the highest number of retirees (", 
    range_table["58-60"], " staff)\n", sep="")
cat("3. Early retirement (50-52) is less common (", 
    range_table["50-52"], " staff)\n", sep="")
cat("4. The retirement age distribution shows most staff work until near or at\n")
cat("   the maximum retirement age, suggesting strong retention or late retirement culture.\n\n")


