scores <- c(33, 24, 54, 94, 16, 89, 60, 6, 77, 61, 13, 44, 26, 24, 73, 73, 90, 39, 90, 54)
pass_status <- scores > 49
names(pass_status) <- paste("Student", 1:20)
print("Pass Status (TRUE = pass, FALSE = fail):")
print(pass_status)
grade_A <- sum(scores >= 90 & scores <= 100)
grade_B <- sum(scores >= 80 & scores <= 89)
grade_C <- sum(scores >= 70 & scores <= 79)
grade_D <- sum(scores >= 60 & scores <= 69)
grade_E <- sum(scores >= 50 & scores <= 59)
grade_F <- sum(scores <= 49)
grade_table <- data.frame(
Score_Range = c("90-100", "80-89", "70-79", "60-69", "50-59", "<=49"),
Grade = c("A", "B", "C", "D", "E", "F"),
Number_of_Students = c(grade_A, grade_B, grade_C, grade_D, grade_E, grade_F)
)
print("Grade Distribution:")
print(grade_table)
pass_count <- sum(pass_status)
fail_count <- sum(!pass_status)
cat("\nTotal Students Passed:", pass_count)
cat("\nTotal Students Failed:", fail_count)
student_names <- c("Robert", "Hemsworth", "Scarlett", "Evans", "Pratt",
"Larson", "Holland", "Paul", "Simu", "Renner")
exam_scores <- c(59, 71, 83, 68, 65, 57, 62, 92, 92, 59)
student_record <- list(
names = student_names,
scores = exam_scores,
count = length(student_names)
)
names(student_record) <- c("Student_Names", "Exam_Scores", "Total_Students")
highest_score <- max(student_record$Exam_Scores)
lowest_score <- min(student_record$Exam_Scores)
average_score <- mean(student_record$Exam_Scores)
highest_students <- student_record$Student_Names[student_record$Exam_Scores == highest_score]
lowest_students <- student_record$Student_Names[student_record$Exam_Scores == lowest_score]
cat("\n========== Question 2 Results ==========\n")
cat("Highest Score:", highest_score, "\n")
cat("Lowest Score:", lowest_score, "\n")
cat("Average Score:", round(average_score, 2), "\n")
cat("Student(s) with highest score:", paste(highest_students, collapse = ", "), "\n")
cat("Student(s) with lowest score:", paste(lowest_students, collapse = ", "), "\n")
